{
  "[typescript]": {
    "editor.formatOnPaste": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "files.exclude": {
    "node_modules/**": true,
    "src/**/*.js": true,
    "src/**/*.js.map": true,
    "src/**/*.d.ts": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "examples/*.json":true
  },
  "eslint.enable": false,
  "typescript.tsdk": "node_modules/typescript/lib"
}